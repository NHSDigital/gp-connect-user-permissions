<AssignMessage name="AssignMessage.Errors.CatchAllResponse" enabled="true">
  <DisplayName>Send Catch-All Response</DisplayName>
  <Condition>error.handled.in.HandleErrorContent = false</Condition>
  <Set>
    <Payload contentType="application/json" variablePrefix="%" variableSuffix="#">
      %message.content#
    </Payload>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="response"/>
  </Set>
</AssignMessage>