<AssignMessage async="false" continueOnError="false" enabled="true" name="AssignMessage.Errors.CatchAllResponse">
  <DisplayName>Send Catch-All Response</DisplayName>
  <Condition>error.handled = false and (ExtractVariables.ResponseVariables.failed = false)</Condition>
  <Set>
    <Payload contentType="application/json" variablePrefix="%" variableSuffix="#">
      %error.content#
    </Payload>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="response"/>
  </Set>
</AssignMessage>
