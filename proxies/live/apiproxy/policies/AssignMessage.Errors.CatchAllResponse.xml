<AssignMessage async="false" continueOnError="false" enabled="true" name="AssignMessage.Errors.CatchAllResponse">
  <DisplayName>Send Catch-All Response</DisplayName>
  <Condition>error.handled = false or (ExtractVariables.ResponseVariables.failed = true)</Condition>
  <Set>
    <Payload contentType="application/json" variablePrefix="%" variableSuffix="#">
    {
        "resourceType": "OperationOutcome",
        "issue": [
            {
            "severity": "error",
            "code": "%error.status.code#",
            "details": {
                "coding": [
                {
                    "code": "%error.status.code#",
                    "display": "%error.reason.phrase#"
                }
                ]
            },
            "diagnostics": "%error.content#"
            }
        ]
    }
    </Payload>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="https" type="response"/>
  </Set>
</AssignMessage>
