<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage continueOnError="false" enabled="true" name="AssignMessage.CopyResponseContent">
  <DisplayName>Copy Response Content</DisplayName>
  <Condition>error.handled.in.HandleErrorContent = true and response.content != null</Condition>
  <AssignTo createNew="false" type="response"/>
  <Set>
    <Payload variable="response.content"/>
    <Headers>
      <Header name="Content-Type">application/json</Header>
    </Headers>
    <StatusCode>%response.status.code#</StatusCode>
    <ReasonPhrase>%response.reason.phrase#</ReasonPhrase>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
  </Set>
</AssignMessage>
