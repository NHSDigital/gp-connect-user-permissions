<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AssignMessage.Errors.CatchAllMessage">
  <DisplayName>Fallback Catch-All</DisplayName>
  <Condition>error.handled.in.HandleErrorContent = false and 
  ExtractVariables.ResponseVariables.failed = false and
  raisefault.failed != true
  </Condition>
  <Set>
    <Payload contentType="application/json" variablePrefix="%" variableSuffix="#">
    {
        "resourceType": "OperationOutcome",
        "issue": [
            {
            "severity": "error",
            "code": "%error.status.code#",
            "details": {
                "coding": [
                {
                    "code": "%error.status.code#",
                    "display": "%error.reason.phrase#"
                }
                ]
            },
            "diagnostics": "%error.content#"
            }
        ]
    }
    </Payload>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="https" type="request"/>
  </Set>
</AssignMessage>
